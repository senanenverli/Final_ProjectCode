@using WebApplication6.Areas.Admin.ViewModel;

@{
    ViewData["Title"] = "UpdateRole";
}

@model UserViewModel

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create new brand</h4>
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="mb-3">Username:@Model.User.UserName</div>
                        <label for="Roles">Roles</label>
                        <select class="form-control mb-3" id="role" multiple name="Roles">
                            @foreach (var role in ViewBag.AllRoles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select> 
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <button asp-action="Index" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

