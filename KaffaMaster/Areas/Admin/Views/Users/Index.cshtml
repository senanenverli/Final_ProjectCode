@using WebApplication6.Areas.Admin.ViewModel;
@{
    ViewData["Title"] = "Index";
}

@model List<UserViewModel>

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ProfilePhoto</th>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Actions</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var models in Model)
                        {


                            <tr>
                                <td><img src="~/assets/images/blog/" /></td>
                                <td>@models.User.UserName</td>
                                <td>@string.Join(", ", models.Roles)</td>
                                @if (models.User.IsActive)
                                {
                                    <td class="text-success">Active</td>
                                }
                                else
                                {
                                    <td class="text-danger">Deactive</td>
                                }

                                <td>

                                    <a class="btn btn-warning" asp-action="UserUpdateRole" asp-route-id="@models.User.UserName">Update Role</a>


                                    @if (models.User.IsActive)
                                    {
                                        <a class="btn btn-danger" asp-action="Ban" asp-route-id="@models.User.UserName">Ban</a>

                                    }
                                    else
                                    {
                                        <a class="btn btn-success" asp-action="Ban" asp-route-id="@models.User.UserName">Unban</a>
                                    }

                                </td>
                            </tr>



                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

