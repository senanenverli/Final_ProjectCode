
@model SubscriptionViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/066942706e.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="loading"></div>
    <section id="loading-pages" class="mobile" style="left: 100%;">
        <section class="mobile-logo py-3 pb-md-5">
            <div class="container-mobile">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="img-container">
                        <img src="~/assets/images/kaffa_logo_dark_2x.png" alt="">
                    </div>
                    <button class="icon-x">
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                </div>
            </div>
        </section>
        <section class="mobile-nav">
            <div class="container-mobile">
                <ul>
                    <li class="d-flex justify-content-between align-items-center">
                        <a class="active langdata" href="index.html">Home</a>
                        <button class="icons">
                            <i class="fa-solid fa-plus"></i>
                        </button>
                    </li>
                    <li class="d-flex justify-content-between align-items-center">
                        <a class="langdata" href="pages/faq.html">FAQ</a>
                        <button class="icons">
                            <i class="fa-solid fa-plus"></i>
                        </button>
                    </li>
                    <li class="d-flex justify-content-between align-items-center">
                        <a class="langdata" href="pages/products.html"> Products</a>
                        <button class="icons">
                            <i class="fa-solid fa-plus"></i>
                        </button>
                    </li>
                    <li class="d-flex justify-content-between align-items-center">
                        <a class="langdata" href="pages/blog.html">Blog</a>
                        <button class="icons">
                            <i class="fa-solid fa-plus"></i>
                        </button>
                    </li>
                    <li class="d-flex justify-content-between align-items-center">
                        <a class="langdata" href="pages/contacts.html">Contacts</a>
                        <button class="icons">
                            <i class="fa-solid fa-plus"></i>
                        </button>
                    </li>
                </ul>
            </div>
        </section>
        <section class="search-section">
            <div class="container-mobile">
                <div class="d-flex justify-content-between align-items-center py-3">
                    <div class="d-flex gap-4 align-items-center icons-left">
                        <div class="icons">
                            <a href="./pages/cart.html"><i class="fa-solid fa-bag-shopping"></i></a>
                        </div>
                        <div class="icons d-flex justify-content-center align-items-center">
                            <p id="cart-amount2">0</p>
                        </div>
                    </div>
                    <div class="icons">
                        <a asp-action="Login" asp-controller="auth"><i class="fa-solid fa-user"></i></a>
                    </div>
                </div>
                <div>
                    <form>
                        <input type="search" placeholder="Search">
                        <button><i class="fa-solid fa-magnifying-glass icon"></i></button>
                    </form>
                </div>
            </div>
        </section>
    </section>
    <header id="loading-pages" class="home">
        <div class="background"></div>
        <section class="header-logo py-3">
            <div class="container">
                <div class="dark-mode-con position-absolute d-block d-xl-none">
                    <button class="brands d-flex justify-content-center align-items-center dark-mode-btn">
                        <i class="fa-solid fa-moon"></i>
                    </button>
                </div>
                <div class="d-flex justify-content-center justify-content-xl-between align-items-center">
                    <div class="d-none d-xl-flex align-items-center">
                        <p class="follow-us langdata">Follow us</p>
                        <div class="d-flex gap-2">
                            <div class="brands d-flex justify-content-center align-items-center">
                                <i class="fa-brands fa-twitter"></i>
                            </div>
                            <div class="brands d-flex justify-content-center align-items-center">
                                <i class="fa-brands fa-facebook-f"></i>
                            </div>
                            <div class="brands d-flex justify-content-center align-items-center">
                                <i class="fa-brands fa-instagram"></i>
                            </div>
                            <div class="brands d-flex justify-content-center align-items-center">
                                <i class="fa-brands fa-youtube"></i>
                            </div>
                        </div>
                    </div>
                    <div class="img-container">
                        <img src="~/assets/images/kaffa_logo_light_2x.png" alt="">
                    </div>


                    <div class="d-none d-xl-flex gap-4 icons-right">
                        <div class="brands d-flex justify-content-center align-items-center">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-action="Profile" asp-controller="User"><i class="fa-solid fa-user"></i></a>
                            }
                            else
                            {
                            
                                <a asp-action="Login" asp-controller="Auth"><i class="fa-solid fa-user"></i></a>
                                
                            }
                            
                        </div>
                        <div class="brands d-flex justify-content-center align-items-center">
                            <a asp-action="Index" asp-controller="Orders"><i class="fa-solid fa-bag-shopping"></i></a>
                            @* <div class="shopping-amount d-flex justify-content-center align-items-center">
                                 <p id="cart-amount">0</p> 
                            </div> *@
                        </div>                        
                        <button class="brands d-flex justify-content-center align-items-center dark-mode-btn">
                            <i class="fa-solid fa-moon"></i>
                        </button>

                   
                    </div>
                </div>
                <div class="hamburger-menu d-block d-xl-none">
                    <button id="hamburger-icon">
                        <span class="lines"></span>
                        <span class="lines"></span>
                        <span class="lines"></span>
                    </button>
                </div>
            </div>
        </section>
        <section class="d-none d-xl-block navigation py-3">
            <div class="container">
                <div class="d-flex justify-content-center">
                    <ul class="d-flex gap-5 mx-3 p-0">
                        <li><a class="active langdata" asp-action="Index" asp-controller="Home">Home <i class="fa-solid fa-chevron-left"></i></a></li>
                        <li><a class="langdata" asp-action="Index" asp-controller="FAQ">FAQ <i class="fa-solid fa-chevron-left"></i></a></li>
                        <li><a class="langdata" asp-action="Index" asp-controller="Shop">Products <i class="fa-solid fa-chevron-left"></i></a></li>
                        <li><a class="langdata" asp-action="Index" asp-controller="Blog">Blog <i class="fa-solid fa-chevron-left"></i></a></li>
                        <li><a class="langdata" asp-action="Index" asp-controller="Contact">Contacts <i class="fa-solid fa-chevron-left"></i></a></li>
                    </ul>
                </div>
            </div>
        </section>
        <section class="hero-section">
            <div class="container">
                <div class="d-flex align-items-center flex-column">
                    <h1 class="heading-green langdata">Natural</h1>
                    <h1 class="langdata">Brazilian Coffee</h1>
                    <p>
                        Curabitur imperdiet varius lacus, id placerat purus vulputate non. Fusce in felis vel arcu
                        maximus
                        placerat eu ut arcu. Ut nunc ex, gravida vel porttitor et, pretium ac sapien.
                    </p>
                </div>
            </div>
        </section>
    </header>
    <section id="loading-pages" class="leaves">
        <div class="container">
            <div class="coffee-smoke">
                <div class="img-container">
                    <img src="~/assets/images/coffee-smoke.png" alt="">
                </div>
            </div>
            <div class="img-container">
                <img src="~/assets/images/coffee-bean.png" alt="">
            </div>
        </div>
    </section>
        @RenderBody()
    <footer id="loading-pages">
        <div class="background"></div>
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-6 col-xl-4">
                    <div class="img-container">
                        <img src="~/assets/images/kaffa_logo_light_2x.png" alt="">
                    </div>
                    <p class="my-5">
                        Etiam consequat sem ullamcorper, euismod
                        metus sit amet, tristique justo. Vestibulum
                        mattis, nisi ut.
                    </p>
                    <div class="icons d-flex gap-5">
                        <i class="fa-brands fa-twitter"></i>
                        <i class="fa-brands fa-facebook-f"></i>
                        <i class="fa-brands fa-instagram"></i>
                        <i class="fa-brands fa-youtube"></i>
                    </div>
                </div>
                <div class="col-12 col-lg-6 col-xl-4 mt-5 mt-lg-0   ">
                    <h2 class="langdata">Contact Info</h2>
                    <div class="d-flex my-4 gap-3">
                        <div><i class="fa-solid fa-location-dot"></i></div>
                        <div>
                            <h6 class="langdata">Our location</h6>
                            <p>Rio de Janeiro, RJ Brazil, 04103 Route</p>
                        </div>
                    </div>
                    <div class="d-flex gap-3">
                        <div><i class="fa-solid fa-phone"></i></div>
                        <div>
                            <h6 class="langdata">Phones:</h6>
                            <div>
                                <a href="tel:+49078-039-23-11">
                                    +49078-039-23-11
                                </a>
                            </div>
                            <div>
                                <a href="tel:+49078-028-55-60">
                                    +49078-028-55-60
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 d-none d-xl-block col-xl-4">
                    <h2 class="langdata">Subscribe</h2>
                    <form asp-controller="Subscription" asp-action="Subscribe" class="mt-4" method="post">
                        <div>
                            <input asp-for="Email" placeholder="Your email ..." class="email" type="email">
                            <button class="langdata">Subscribe</button>
                        </div>
                        <div class="mt-4">
                            <input type="checkbox">
                            <label for="" class="langdata">I have read and agree to the terms & conditions</label>
                        </div>
                    </form> 
                </div>
            </div>
        </div>
    </footer>
    <script src="~/assets/js/index.js"></script>
    <script src="~/assets/js/partials.js"></script>

</body>

</html>
        
